---

<section class="w-4/5 max-w-[1400px] mx-auto items-center min-h-screen">
    <h1 class="text-white mb-28">Featured Projects</h1>
    <div class="flex flex-col gap-32">
        {
            data.map((project, idx) => {
                return (
                    <div
                        class={`flex justify-between items-center ${
                            idx % 2 === 1
                                ? "flex-row-reverse text-right"
                                : "flex-row"
                        }`}
                    >
                        <a href="/" class="w-5/12 aspect-video rounded-lg">
                            <img
                                src={project.image}
                                class="object-cover h-full w-full rounded-lg hover:scale-105 transition-all cursor-pointer duration-300"
                            />
                        </a>
                        <div class="font-mont w-6/12 flex flex-col gap-2">
                            <h2 class="font-voyage text-6xl text-pink">
                                {project.heading}
                            </h2>
                            <h4 class="text-2xl text-gray">
                                {project.subheading}
                            </h4>
                            <p class="text-white text-xl">
                                {project.description}
                            </p>
                        </div>
                    </div>
                );
            })
        }
    </div>
</section>
