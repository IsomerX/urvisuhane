    <script>
        const display_picture = document.getElementById("display_picture");
        display_picture!.addEventListener("mouseover", () => {
            console.log("asddsa");
            document.body.classList.add("bg-pink");
            document.getElementById("puzzle").classList.add("together");
            document.getElementById("before_pink").classList.add("hidden");
            document.getElementById("after_pink").classList.remove("hidden");
        });
        display_picture!.addEventListener("mouseout", () => {
            document.body.classList.remove("bg-pink");
            document.getElementById("puzzle").classList.remove("together");
            document.getElementById("before_pink").classList.remove("hidden");
            document.getElementById("after_pink").classList.add("hidden");
        });
    </script>
