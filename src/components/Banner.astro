---
import Puzzle from "./Puzzle.astro";
---

<Puzzle />
<section
    class="flex flex-col-reverse px-5 md:px-0 mt-10 md:mt-0 sm:flex-row justify-center md:justify-between min-h-screen w-full md:w-4/5 md:max-w-[1400px] mx-auto items-center gap-5 md:gap-0 mb-10 md:mb-0 relative z-50"
>
    <div
        class="font-mont w-full text-center md:text-left md:w-1/2 flex flex-col gap-2 transition-all duration-300"
        id="before_pink"
    >
        <h1 class="text-white hidden md:block">
            Hello! <span class="text-pink">I'm Urvi</span>
        </h1>
        <h2 class="text-pink text-lg md:text-2xl 2xl:text-3xl hidden md:block">
            A UI/UX Researcher & Visual Designer
        </h2>
        <p class="text-white text-md md:text-lg 2xl:text-xl">
            I'm an undergraduate student at Delhi Technological University,
            exploring the intriguing world of Experience Design to create
            experiences that engage and excite. Iâ€™m inclined towards research
            and my end goal is to design services that create impact.
        </p>
        <button
            class="bg-pink py-3 md:py-4 w-full text-white font-bold text-md 2xl:text-xl rounded-lg mt-7 hover:bg-pink-light transition-all"
            >Let's Work Together</button
        >
    </div>
    <div
        class="w-2/3 font-voyage text-2xl hidden transition-all duration-300 text-white relative z-30 mt-52"
        id="after_pink"
    >
        Let's Make Things Work Together
    </div>
    <!-- urvi you! -->
    <img
        src="/images/urvi.png"
        alt="profile-img"
        class="w-4/5 md:w-1/3 pink_on_hover relative z-30 transition-all duration-300 hover:scale-110 pointer-events-none md:pointer-events-auto"
        id="display_picture"
    />
    <div
        class="font-mont w-full text-center md:text-left md:w-1/2 flex md:hidden flex-col gap-2 transition-all duration-300"
        id="before_pink"
    >
        <h1 class="text-white">
            Hello! <span class="text-pink">I'm Urvi</span>
        </h1>
        <h2 class="text-pink text-lg md:text-2xl 2xl:text-3xl">
            A UI/UX Researcher & Visual Designer
        </h2>
    </div>
    <script>
        const display_picture = document.getElementById("display_picture");
        display_picture!.addEventListener("mouseover", () => {
            console.log("asddsa");
            document.body.classList.add("bg-pink");
            document.getElementById("puzzle").classList.add("together");
            document.getElementById("before_pink").classList.add("hidden");
            document.getElementById("after_pink").classList.remove("hidden");
        });
        display_picture!.addEventListener("mouseout", () => {
            document.body.classList.remove("bg-pink");
            document.getElementById("puzzle").classList.remove("together");
            document.getElementById("before_pink").classList.remove("hidden");
            document.getElementById("after_pink").classList.add("hidden");
        });
    </script>
</section>

<style>
    #after_pink {
        @apply text-8xl transition-all duration-300;
    }
</style>
